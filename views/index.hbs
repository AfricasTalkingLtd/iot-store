<div class="container">
    <div id="shopping-cart" class="shopping-cart">
        <div class="shopping-cart-header">
            <i class="fa fa-shopping-cart cart-icon"></i><span class="badge">2</span>

            <div class="shopping-cart-total">
                <span class="lighter-text">Total:</span>
                <span class="main-color-text">KES 50</span>
            </div>
        </div>
        <!--end shopping-cart-header -->

        <ul class="shopping-cart-items">
            <li class="clearfix">
                <img src="http://www.robotop.lv/1651-home/sim900-quad-band-wireless-gsmgprs-shield.jpg" width="70" alt="GSM Sheild"/>
                <span class="item-name">Arduino GSM Shield + Free Airtime</span>
                <span class="item-price">KES 30</span>
                <span class="item-quantity">Qty: 1</span>
            </li>

            <li class="clearfix">
                <img src="https://mi4.rightinthebox.com/images/128x128/201411/twyywc1415257716146.jpg" width="70" alt="LED Strip"/>
                <span class="item-name">10M RGB LED Strip</span>
                <span class="item-price">KES 20</span>
                <span class="item-quantity">Qty: 1</span>
            </li>
        </ul>

        <a href="#" id="btnCheckout" class="button">Checkout</a>
    </div>
    <!--end shopping-cart -->

    <div id="payment-cart" class="shopping-cart">
        <div class="shopping-cart-header">
            <i class="fa fa-shopping-cart cart-icon"></i><span class="badge">2</span>

            <div class="shopping-cart-total">
                <span class="lighter-text">Total:</span>
                <span class="main-color-text">KES 50</span>
            </div>
        </div>

        <div id="mpesaMsg"></div>

        <form id="payment-form" method="post">
            <div style="text-align: center">
                <input id="transaction" type="hidden" name="transaction">
                <input id="mpesa_txn" type="hidden" name="mpesa_transaction">

                <input id="reference" type="hidden" name="reference">
                <input id="amount" type="hidden" name="amount" value="50">

                <input id="confirmation-code" type="text" placeholder="Code e.g. 7865" style="display:none">

                <div id="phoneNumberInput">
                    <ul class="shopping-cart-items">
                        <li class="clearfix">
                            <span class="item-name"><label for="phone">M-Pesa Phone Number</label></span>
                        </li>
                    </ul>
                    <span class="phoneInput">
                        <span>254</span>
                        <input id="phone" type="tel" placeholder="710000000" name="phone">
                    </span>
                </div>

            </div>
        </form>

        <a href="#" id="btnPay" class="button">Lipa Na M-Pesa</a>

    </div>
</div>

<div id="banner-container">
    <img id="banner" src="/images/banner.png">
